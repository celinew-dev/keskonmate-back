{% extends 'backoffice/base.html.twig' %}

{% block title %} - Liste des Series{{ parent() }}{% endblock %}


{% block body %}
<div class="container">
{{ include('_partials/_flash_messages.html.twig') }}

<h1>Series</h1>
{{ form(searchBar) }}
<div> 
    <a href="{{ url('backoffice_series_add') }}" class="btn btn-success" title="Add" alt="Add">
        Ajouter
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16" >
            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
        </svg>
    </a>
</div>
<div class="text-end">
</a>
</div>
<div class="d-flex justify-content-center">
  {{ knp_pagination_render(series) }}
</div>
<table class="table table-striped" style="width:100%">
  <thead>
    <tr>
     

      <th scope="col" style="width:10%">{{ knp_pagination_sortable(series, 'Titre', 'title') }}</th>
      <th scope="col" style="width:5%">{{ knp_pagination_sortable(series, 'Id', 'id') }}</th>
      <th scope="col" style="width:40%">Synopsis</th>
      <th scope="col"style="width:5%">{{ knp_pagination_sortable(series, 'Date de Sortie', 'releaseDate') }}</th>
      <th scope="col"style="width:5%">Image</th>
      <th scope="col"style="width:15%">{{ knp_pagination_sortable(series, 'Realisateur', 'director') }}</th>
      <th scope="col"style="width:10%">Nombre de saisons</th>
      <th scope="col"style="width:10%"></th>
    </tr>
  </thead>
  <tbody>
{% for series in series %}
    <tr>
      <th scope="row"><a href="{{ url('backoffice_series_read', {"id": series.id}) }}" title="Read" alt="Read"> {{ series.title }} </a></th>
      <td>{{ series.id }}</td>
      <td>{{ series.synopsis|slice(0, 70) }}...</td>
      <td>{{ series.releaseDate|date }}</td>
      <td><a href="{{ series.image }}">image</a></td>
      <td>{{ series.director }}</td>
      <td>{{ series.numberOfSeasons }}</td>
      <td>        
        <a class="btn btn-primary" href="{{ url('backoffice_series_edit', {"id": series.id}) }}" title="Edit" alt="Edit">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
            <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
          </svg>
        </a>

        <div class="btn-group" role="group">
            <button id="btnGroupDrop1" type="button" class="btn btn-danger dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" title="Delete" alt="Delete">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
              <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
              <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
            </svg>
            </button>
            <ul class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                <li><a class="dropdown-item" href="{{ url('backoffice_series_delete', {"id": series.id}) }}">Oui, je suis sur!</a></li>
            </ul>
        </div>

      </td>
    </tr>    
{% endfor %}
  </tbody>
</table>
</div>
<div class="d-flex justify-content-center">
  {{ knp_pagination_render(series) }}
</div>
{% endblock %}