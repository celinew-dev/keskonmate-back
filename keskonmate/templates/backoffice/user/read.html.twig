{% extends "backoffice/base.html.twig" %}

{% block title %}{{ parent() }} {% endblock %}

{% block body %}
<div class="container">
<h1></h1>
<div> 
     <a href="{{ url('backoffice_users_browse') }}" class="btn btn-primary" alt="List" title="List">
        Retour
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-list" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"/>
        </svg>
    </a>  
    <a href="{{ url('backoffice_users_edit', {"id": user.id}) }}" class="btn btn-success" alt="List" title="List">
        Editer
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-list" viewBox="0 0 16 16">
            <path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"/>
        </svg>
    </a> 
</div>
{% dump(userlists) %}
<div class="d-flex justify-content-center">
    <div class="d-flex shadow mb-5 bg-white rounded card col-5">
        <article class="align-self-center card-body col-10">
            <div class="form-group">
                <label>Pseudo :</label>
                <h6 class="card-header">{{ user.userNickname }}</h6>
            </div>
            <div class="form-group">
                <label>Email :</label>
                <h6 class="card-header">{{ user.email }}</h6>
            </div>

            {% if (is_granted('ROLE_SUPER_ADMIN')) %}
            <div class="form-group">
                <label>Mot de passe :</label>
                <h6 class="card-header">{{ user.password }}</h6>
            </div>
            {% endif %}

            <div>
                <label>Role(s) :</label>
                {{ form_row(user_form.roles) }}
            </div>

            <div class="card-footer d-flex flex-column justify-content-between bg-white">
                <div class="mb-1">
                    <p class="my-0 h6">Ajouté le : {{ user.createdAt|date("d/m/Y") }}</p>
                </div>
                <div>
                    <p class="my-0 h6">Mis à jour le : {{ user.updatedAt|date("d/m/Y") }}</p>
                </div>
            </div>
        </article>
    </div>
</div>
<div>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col" style="width:10%">Id</th>
      <th scope="col" style="width:10%">Series Id</th>
      <th scope="col" style="width:20%">Season Number</th>
      <th scope="col" style="width:20%">Episode Number</th>
      <th scope="col" style="width:10%">List Type</th>
      <th scope="col" style="width:20%"></th>
    </tr>
  </thead>
  <tbody>
{% for list in userlists %}
    <tr>
      <th scope="row">{{ list.id }}</th>      
      <td>
        <a href="{{ url('backoffice_series_read', {"id": list.series.id}) }}">
          {{ list.series.id }}
        </a>
      </td>
      <td>{{ list.seasonNb }}</td>
      <td>{{ list.episodeNb }}</td>
      <td>{{ list.type }}</td>
      <td>
        <a class="btn btn-success" href="{{ url('backoffice_userlists_read', {"id": list.id}) }}" title="Read" alt="Read">
          {# images récupérées sur bootstrap icons https://icons.getbootstrap.com/ #}
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
            <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
          </svg>
        </a>
        <a class="btn btn-primary" href="{{ url('backoffice_userlists_edit', {"id": list.id}) }}" title="Edit" alt="Edit">
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
            <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
          </svg>
        </a>

        <div class="btn-group" role="group">
            <button id="btnGroupDrop1" type="button" class="btn btn-danger dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" title="Delete" alt="Delete">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
              <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
              <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
            </svg>
            </button>
            <ul class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                <li><a class="dropdown-item" href="{{ url('backoffice_userlists_delete', {"id": list.id}) }}">Oui, je suis sur!</a></li>
            </ul>
        </div>

      </td>
    </tr>
{% endfor %}
  </tbody>
</table>
</div>
{% endblock %}