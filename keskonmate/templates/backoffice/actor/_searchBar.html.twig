{% extends 'backoffice/base.html.twig' %}

{% block searchBar %}
    {% if app.request.method == 'POST' %}
        <div>
            {% if actors | length == 0 %}
                <h4>Aucun résulat pour votre recherche.</h4>
            {% else %}
                <h3 class="mt-3 text-center">Vos résultats de recherche :</h3>
                <div class="mx-auto d-flex flex-row flex-wrap col-6">
                {% for actor in actors %}
                    <div class="mx-auto mt-3 p-3 bg-light border rounded col-2 text-center d-flex flex-column">
                        <a class="align-items-baseline mx-auto m-2 col-12" href="{{ path('backoffice_actors_read', {'id': actor.id}) }}">
                            <h6 class="text-dark"><i class="bi bi-arrow-down-right-square-fill text-primary"></i> {{ actor.name }}</h6>
                            <img class="img-fluid col-12" src="{{actor.image}}">
                        </a>
                    </div>
                {% endfor %}
                </div>
            {% endif %}
        </div>
    {% endif %}
{% endblock %}